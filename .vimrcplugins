" Reorganize all buffers
function! ReorganizeAllWindows(timer)
    if (winnr("$") != 1)
        NERDTreeClose
    endif
    if buflisted(bufname('.git/index'))
        b .git/index
        close
        bd .git/index
    endif
    call ToggleNerdFugitiveVimStartup("")
endfunction
nnoremap <leader>ow :call ReorganizeAllWindows("")<cr>

